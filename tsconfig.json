{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "lib": ["ESNext", "DOM"],
    "rootDir": "./",
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "esModuleInterop": true
  }
}
